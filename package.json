{
  "name": "kappa-psi",
  "version": "1.0.0",
  "description": "Chat Application for Kappa Psi",
  "main": "server.js",
  "dependencies": {
    "express": "^4.16.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-slideshow-image": "^1.1.5",
    "semantic-ui-react": "^0.86.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smoothtacoman/kappa-psi.git"
  },
  "author": "MiChel Causey, Juan Toledo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/smoothtacoman/kappa-psi/issues"
  },
  "homepage": "https://github.com/smoothtacoman/kappa-psi#readme"
}
